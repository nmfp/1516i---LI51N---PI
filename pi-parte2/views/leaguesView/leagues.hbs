    <div class="jumbotron">
        <h1>{{title}}</h1>
        <p class="lead">{{description}}</p>

    </div>

    <div class="row marketing">

{{#each leagues}}
        <div class="col-lg-6">
            <h3><b><i>League</i></b>: <a href="/">{{caption}}</a></h3>
