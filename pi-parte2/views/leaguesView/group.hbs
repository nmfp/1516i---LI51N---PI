
<div class="container">

    <div class="jumbotron">
        <h1>Group Controller</h1>
    </div>


    <form class="form-inline" action = "/favorites/insertGroup" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="groupName">
        </div>
        <button type="submit" class="btn btn-default" href >Add Group</button>
    </form>

    <div class="row marketing">

        {{#each groups}}
            <div class="col-lg-6">
                <h3><b><i>Group</i></b>: <a href="/favorites/{{group}}/teams">{{group}}</a></h3>
            </div>
        {{/each}}

    </div>

    <hr>

</div> <!-- /container -->
