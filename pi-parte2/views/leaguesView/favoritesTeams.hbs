
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1>{{groupName}}</h1>
    </div>

    <div class = "container">
    <form action="/favorites/deleteGroup" method="post">
        <button type="submit" class="btn btn-primary">Delete Group!</button>
        <input name = "favoriteName" value="{{groupName}}" style="display:none" />
    </form></div>

</div>

<div class="container">
    <div class="row">
        {{#each teams}}
            <div class="col-md-4" style="padding-bottom:20px; padding-top:10px; text-align: center">
                <h2><a href="/football-data/leagues/{{idL}}/teams/{{id}}/players">{{name}}</a></h2>
                <p>Short name: {{code}}</p>
                <p>Value: {{squadMarketValue}}</p>
                <img src="{{crestUrl}}" width="100" height="100" style="display: block; margin-left: auto; margin-right: auto;"/>
            </div>
        {{/each}}
    </div>

    <hr>

</div> <!-- /container -->
