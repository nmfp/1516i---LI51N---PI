
<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1>{{team.name}}</h1>
        <p><a href="/football-data/leagues/{{team.idL}}/teams/{{team.id}}/teamFixtures">Fixtures</a></p>
    </div>
</div>

<div class="container">
    <div class="row">
{{#each players}}
        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">
                <img src="/images/noPhoto.jpeg" width="100" height="100">
                <div class="caption" style="text-align: center">
                    <h3>{{name}}</h3>
                    <p>Position: {{position}}</p>
                    <p>Number: {{jerseyNumber}}</p>
                    <p>Birth: {{dateOfBirth}}</p>
                    <p>Nationality: {{nationality}}</p>
                    <p>Contract until: {{contractUntil}}</p>
                    <p>Value: {{marketValue}}</p>
                </div>
            </div>
        </div>
{{/each}}
</div>

    <hr>

</div> <!-- /container -->
