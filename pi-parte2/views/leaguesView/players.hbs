

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1>{{team.name}}</h1>
    </div>
</div>

<div class="container">
    <div class="row">
        {{#each players}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="../../public/images/noPhoto.svg" alt="100%x200">
                    <div class="caption">
                        <h3>{{name}}</h3>
                        <p>Position: {{position}}</p>
                        <p>Number: {{jerseyNumber}}</p>
                        <p>Birth: {{dateOfBirth}}</p>
                        <p>Nationality: {{nationality}}</p>
                        <p>Contract until: {{contractUntil}}</p>
                        <p>Value: {{marketValue}}</p>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>

    <hr>

    <footer class="footer">
        <p>&copy; 2015/16 PI, G8.</p>
    </footer>
</div> <!-- /container -->