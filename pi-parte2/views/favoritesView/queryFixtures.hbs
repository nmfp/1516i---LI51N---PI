
    <div class="row" style="padding-top: 50px">
        <h1>Select the number of days to see the next/previous fixtures from {{name}}</h1>

        <form class="form-inline" action="/favorites/nextFixtures" method="get">
            <div class="form-group">
                <input type="number" name="ndays" placeholder="Set the number of days" required/>
            </div>
            <div class="form-group">
                <select name="to" required>
                    <option selected disabled hidden value=''></option>
                    <option value="up">foward</option>
                    <option value="down">previous</option>
                </select>
            </div>
            <div class="form-group">
                <input name= "idL" value="{{idL}}" style="display:none" />
            </div>
            <div class="form-group">
                <input name= "idT" value="{{idT}}" style="display:none" />
            </div>
            <button type="submit" class="btn btn-default" >Search</button>
        </form>

        <hr>

        <h1> Delete team from {{groupName}} ? </h1>
        <form class="form-inline" action="/favorites/deleteTeam" method="post">

            <div class="form-group">
                <select name="ans" required>
                    <option selected disabled hidden value=''></option>
                    <option value="Y">yes</option>
                    <option value="N">No</option>
                </select>
            </div>
            <div class="form-group">
                <input name= "groupName" value="{{groupName}}" style="display:none" />
            </div>
            <div class="form-group">
                <input name= "idL" value="{{idL}}" style="display:none" />
            </div>
            <div class="form-group">
                <input name= "idT" value="{{idT}}" style="display:none" />
            </div>
            <button type="submit" class="btn btn-default" >Delete</button>
        </form>

    </div>
